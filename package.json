{
  "name": "@karmaniverous/react-component-npm-package-template",
  "version": "0.3.0",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:karmaniverous/react-component-npm-package-template.git"
  },
  "author": "Jason G. Williscroft",
  "bugs": {
    "url": "https://github.com/karmaniverous/react-component-npm-package-template/issues"
  },
  "description": "An ES6 React component NPM package project template featuring front & back end test support, automated API docs, release management & more!",
  "homepage": "https://github.com/karmaniverous/react-component-npm-package-template#readme",
  "keywords": [
    "react",
    "testing",
    "template",
    "npm",
    "package",
    "mocha",
    "chai",
    "release"
  ],
  "license": "BSD-3-Clause",
  "dependencies": {
    "lodash": "^4.17.21",
    "prop-types": "^15.8.1",
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.19.3",
    "@babel/core": "^7.20.5",
    "@babel/eslint-parser": "^7.19.1",
    "@babel/plugin-syntax-import-assertions": "^7.20.0",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@babel/register": "^7.18.9",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/node": "^18.11.17",
    "@types/react": "^18.0.26",
    "babel-plugin-lodash": "^3.3.4",
    "babel-plugin-module-extension": "^0.1.3",
    "chai": "^4.3.7",
    "concat-md": "^0.5.0",
    "dotenv-cli": "^6.0.0",
    "eslint": "^8.30.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-jsx": "^0.1.0",
    "eslint-plugin-mocha": "^10.1.0",
    "eslint-plugin-react": "^7.31.11",
    "global-jsdom": "^8.6.0",
    "jsdoc-to-markdown": "^8.0.0",
    "jsdom": "^20.0.3",
    "mocha": "^10.2.0",
    "prettier": "^2.8.1",
    "release-it": "^15.5.1",
    "rimraf": "^3.0.2"
  },
  "exports": {
    ".": "./dist/default/lib/index.js"
  },
  "mocha": {
    "exclude": [
      "./dist/**/*",
      "./node_modules/**/*"
    ],
    "require": [
      "@babel/register",
      "global-jsdom/register"
    ],
    "spec": "./**/*.test.!(*.*)"
  },
  "release-it": {
    "github": {
      "release": true
    },
    "npm": {
      "publish": true
    }
  },
  "scripts": {
    "lint": "eslint lib/**",
    "test": "mocha",
    "build": "babel lib -d dist/default/lib --delete-dir-on-start --config-file ./dist/default/.babelrc",
    "doc": "jsdoc2md -c doc/jsdoc.config.json -f dist/**/*.* -t doc/api-template.hbs > doc/3-api.md && concat-md doc --hide-anchor-links > README.md",
    "package": "npm run lint && npm run test && npm run build && npm run doc",
    "release": "npm run package && dotenv -c -- release-it"
  }
}
